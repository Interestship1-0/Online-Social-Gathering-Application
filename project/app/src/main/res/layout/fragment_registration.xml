<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:id="@+id/mainLinearLayout">

    <ImageView
        android:id="@+id/imageViewStart"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_211sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:src="@drawable/dummy"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"/>

    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_355sdp"
        android:background="@drawable/round_background"
        android:orientation="vertical"
        android:id="@+id/childLinearLayout">


        <TextView
            android:layout_width="@dimen/_104sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sofia_pro_black"
            android:gravity="center"
            android:text="@string/proceed_to"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_19ssp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="@dimen/_96sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sofia_pro_bold"
            android:gravity="center"
            android:text="@string/sign_up"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold" />

        <EditText
            style="@style/MyEditTextStyle"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/username"
            android:id="@+id/editTextUsername"
            android:drawableRight="@drawable/user"
            android:drawableTint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:drawableEnd="@drawable/user" />

        <EditText
            style="@style/MyEditTextStyle"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/email_address"
            android:id="@+id/editTextEmail"
            android:drawableRight="@drawable/email"
            android:drawableTint="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:drawableEnd="@drawable/email" />

        <EditText
            style="@style/MyEditTextStyle"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/Phone_number"
            android:id="@+id/editTextPhone"
            android:drawableRight="@drawable/phone"
            android:drawableTint="@android:color/white"
            android:backgroundTint="@android:color/white"
            app:backgroundTint="@android:color/white"
            android:drawableEnd="@drawable/phone" />

        <EditText
            style="@style/MyEditTextStyle"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/password"
            android:id="@+id/editTextPassword"
            android:drawableRight="@drawable/pass"
            android:drawableTint="@android:color/white"
            android:backgroundTint="@android:color/white"
            app:backgroundTint="@android:color/white"
            android:drawableEnd="@drawable/pass" />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="@dimen/_155sdp"
            android:layout_height="@dimen/_47sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/button_round"
            android:layout_gravity="center"
            android:text="Submit"
            android:fontFamily="@font/sofia_pro_bold"
            android:textSize="@dimen/_18ssp"/>











    </LinearLayout>


</LinearLayout>
